<%- include('../includes/main.ejs') %>
<%- include('../includes/header.ejs') %>

        <div class="form-control">
            <h2 class="center">Admin Login</h2>

            <%- include('../includes/flash.ejs') %>
            
            <form action="/auth/admin/login" method="POST" novalidate>
                <div class="form-input">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="<%= formData ? formData.email : '' %>">
                    <% if (errors && errors.email) { %>
                        <p class="input-error"><%= errors.email %></p>
                    <% } %>
                </div>
        
                <div class="form-input">
                    <label for="pass">Password:</label>
                    <input type="password" id="pass" name="password">
                    <% if (errors && errors.password) { %>
                        <p class="input-error"><%= errors.password %></p>
                    <% } %>
                </div>

                <div class="form-input">
                    <label for="role">Role:</label>
                    <select name="role" id="role">
                        <option value="admin" selected>Admin</option>
                    </select>
                    <% if (errors && errors.role) { %>
                        <p class="input-error"><%= errors.role %></p>
                    <% } %>
                </div>

                <div class="form-input admin-secret-key">
                    <label for="adminSecret">Admin Secret Key:</label>
                    <input type="password" id="adminSecret" name="adminSecret">
                    <% if (errors && errors.adminSecret) { %>
                        <p class="input-error"><%= errors.adminSecret %></p>
                    <% } %>
                </div>

                <div class="center">
                    <button class="btn" type="submit">Login</button>
                </div>
            </form>
        </div>
        <%- include('../includes/flashScript.ejs') %>
        <script src="/js/preventBack.js"></script>
    </body>
</html>
