<link rel="stylesheet" href="/css/navigation.css">

</head>
<body>
  <header class="main-header">
    <nav class="navbar">
      <ul class="nav-list">
          <% if(userRole === 'admin'){ %>
            <li class="nav-item">
              <a href="/admin/users">Users</a>
            </li>
            <li class="nav-item">
              <a href="/admin/addCategory">Add category</a>
            </li>
            <li class="nav-item">
              <a href="/admin/jobCategories">Job Categories</a>
            </li>
          <% } else if(userRole === 'jobSeeker'){ %>
            <li class="nav-item">
              <a href="/jobSeeker/home">Home</a>
            </li>
          <% } else if(userRole === 'recruiter'){ %>
            <li class="nav-item">
              <a href="/recruiter/home">Home</a>
            </li>
            <li class="nav-item">
              <a href="/recruiter/jobListing">Add Job</a>
